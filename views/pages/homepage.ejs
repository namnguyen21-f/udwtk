                                <a href="#" class="card-text">Lorem ipsum, dolor sit amet consectetur adipisicing elit.</a>
                                
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 card">
                                <img class="card-img-top" src="images/9.PNG" alt="image">       
                                <a href="#" class="card-text">Lorem ipsum, dolor sit amet consectetur adipisicing elit.</a>
                                
                            </div>
                        </div>
                    </div>
                    
                    <div class="newComment">
                        <div class="row">
                            <h5 class="col-lg-12">NEW COMMNET</h5>
                        </div>
                        <% comments.forEach(function(comment) { %>
