<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body class="container">
    <header><%- include('../partials/header.ejs') %></header>

    <main>
      <form action='/login' id="register" method="POST">
        <label for="username">Username:</label><br>
        <input type="text" id="username" name="user" placeholder=""><br>
        <label for="password">Password:</label><br>
        <input type="text" id="password" name="password" placeholder=""><br><br>
        <input type="submit" class="submit" value="Submit">
      </form>
      
    </main>

    <footer><%- include('../partials/head.ejs') %></footer>

    <script type="text/javascript">
      const form = document.getElementById("register");
      form.addEventListener('submit',(e)=>{
        e.preventDefault();
        const data = {};
        $.ajax({
          url: '/api/login',
          data: JSON.stringify({email : form.elements[0].value,password : form.elements[1].value}),
          processData: false,
          type: 'POST',
          contentType: 'application/json',
          success: function (data) {
            localStorage.setItem('authorization','Bearer ' + data.token);
            window.location.href = "/";
          }
        });
      })
    </script>
  </body>
</html>
